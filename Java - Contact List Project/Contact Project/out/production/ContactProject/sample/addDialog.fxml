<DialogPane id="addContactButton" fx:id="addContactDialog" contentText="Enter new contact:" headerText="Add Context" prefHeight="394.0" prefWidth="383.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <header>
      <Label alignment="CENTER" contentDisplay="TOP" text="Add Contacts Form" textAlignment="CENTER" textFill="#407c39">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <font>
            <Font name="System Bold" size="20.0" />
         </font></Label>
   </header>
   <buttonTypes>
      <ButtonType fx:constant="APPLY" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
   <content>
      <GridPane alignment="CENTER" hgap="10" vgap="10">
         <Label text="First Name:" textFill="#131413" GridPane.columnIndex="0" GridPane.rowIndex="0">
             <font>
                 <Font name="System Bold" size="18.0" />
             </font>
         </Label>
         <TextField fx:id="firstNameField" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <Label text="Last Name:" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <font>
               <Font name="System Bold" size="18.0" />
            </font></Label>
         <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2">
             <font>
                 <Font name="System Bold" size="18.0" />
             </font>
         </Label>
         <TextField fx:id="phoneField" GridPane.columnIndex="0" GridPane.rowIndex="3" />
         <Label text="Email:" GridPane.columnIndex="1" GridPane.rowIndex="2">
             <font>
                 <Font name="System Bold" size="18.0" />
             </font>
         </Label>
         <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3">
             <font>
                 <Font name="System Bold" size="18.0" />
             </font>
         </TextField>
         <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4">
             <font>
                 <Font name="System Bold" size="18.0" />
             </font>
         </Label>
         <TextArea fx:id="notesArea" prefHeight="77.0" prefWidth="171.0" wrapText="True" GridPane.columnIndex="0" GridPane.rowIndex="5" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </content>
   <effect>
      <DropShadow />
   </effect>
