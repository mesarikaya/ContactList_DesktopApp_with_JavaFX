<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.effect.DropShadow?>

<SplitPane fx:id="mainPane" dividerPositions="0.5" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller" stylesheets="@style.css">
   <items>
      <ToolBar prefHeight="55.0" prefWidth="642.0">
        <items>
          <Button fx:id="addButton" mnemonicParsing="false" onMouseClicked="#openDialog" text="Add " underline="true">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="closeButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Close" underline="true">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="aboutButton" layoutX="78.0" layoutY="10.0" mnemonicParsing="false" text="About" underline="true">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
        </items>
      </ToolBar>
      <TableView fx:id="contactsTable" editable="true">
        <columns>
          <TableColumn fx:id="firstName" prefWidth="147.0" text="First Name" />
          <TableColumn fx:id="lastName" prefWidth="154.0" text="Last Name" />
          <TableColumn fx:id="phoneNumber" prefWidth="102.0" text="Phone" />
          <TableColumn fx:id="email" prefWidth="102.0" text="Email" />
          <TableColumn fx:id="note" prefWidth="347.0" text="Note" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
          <rowFactory>


          </rowFactory>
      </TableView>
   </items>
</SplitPane>
